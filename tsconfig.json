{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"isolatedModules": true,
		"verbatimModuleSyntax": true,
		"resolveJsonModule": true,
		"noEmit": true,
		"types": ["bun-types"],
		"paths": {
			"@seedcli/core": ["./packages/core/src/index.ts"],
			"@seedcli/print": ["./packages/print/src/index.ts"],
			"@seedcli/prompt": ["./packages/prompt/src/index.ts"],
			"@seedcli/filesystem": ["./packages/filesystem/src/index.ts"],
			"@seedcli/system": ["./packages/system/src/index.ts"],
			"@seedcli/http": ["./packages/http/src/index.ts"],
			"@seedcli/template": ["./packages/template/src/index.ts"],
			"@seedcli/strings": ["./packages/strings/src/index.ts"],
			"@seedcli/patching": ["./packages/patching/src/index.ts"],
			"@seedcli/semver": ["./packages/semver/src/index.ts"],
			"@seedcli/config": ["./packages/config/src/index.ts"],
			"@seedcli/package-manager": ["./packages/package-manager/src/index.ts"],
			"@seedcli/testing": ["./packages/testing/src/index.ts"],
			"@seedcli/completions": ["./packages/completions/src/index.ts"],
			"@seedcli/ui": ["./packages/ui/src/index.ts"],
			"@seedcli/toolbox": ["./packages/toolbox/src/index.ts"],
			"@seedcli/cli": ["./packages/cli/src/index.ts"]
		}
	},
	"include": ["packages/*/src/**/*.ts", "examples/*/src/**/*.ts", "examples/*/tests/**/*.ts"],
	"exclude": ["node_modules", "dist", "**/*.test.ts"]
}
