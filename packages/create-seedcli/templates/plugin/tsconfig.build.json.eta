{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"isolatedModules": true,
		"verbatimModuleSyntax": true,
		"rootDir": "src",
		"outDir": "dist",
		"types": ["@types/bun"]
	},
	"include": ["src/**/*.ts"],
	"exclude": ["**/*.test.ts"]
}
